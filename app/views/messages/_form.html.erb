<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
        <%= alert %>
        <ul>
            <% @message.errors.full_messages.each do |full_message| %>
            <li>
                <%= full_message %>
            </li>
        <% end %>
        </ul>
    </div>
    <% end %>
　  <% end %>
    
<%= form_for(@message, :html => {:class => "form-horizontal"}) do |f| %>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-1 control-label">名前</label>
    <div class="col-sm-11">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-1 control-label">本文</label>
    <div class="col-sm-11">
      <%= f.text_area :body, class: 'form-control' %>
    </div>
  </div>
 
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-1 control-label">年齢</label>
    <div class="col-sm-11">
      <%= f.text_field :age, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10 col-sm-offset-0">
　　  <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>
